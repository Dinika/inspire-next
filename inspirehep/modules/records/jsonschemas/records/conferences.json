{
    "$schema": "http://json-schema.org/schema#",
    "properties": {
        "self": {
          "description": "Url of the record itself",
          "title": "Url of the record",
          "$ref": "elements/json_reference.json"
        },
        "acronym": {
            "title": "Conference acronym",
            "type": "array"
        },
        "address": {
            "type": "array",
            "item": {"$ref": "elements/address.json"},
            "uniqueItems": true
        },
        "alternative_titles": {
            "$ref": "elements/titles.json"
        },
        "closing_date": {
            "format": "date",
            "title": "Conference closing date",
            "type": "string"
        },
        "cnum": {
            "pattern": "C\\d\\d-\\d\\d(-\\d\\d)?(\\.\\d+)?",
            "title": "Conference ID (CNUM)",
            "type": "string"
        },
        "contact_details": {
            "type": "array",
            "items": {"$ref": "elements/contact.json"},
            "uniqueItems": true
        },
        "field_categories": {
            "$ref": "elements/fields.json"
        },
        "keywords": {
            "properties": {
                "value": {
                    "type": "string"
                },
                "source": {
                    "type": "string"
                }
            },
            "title": "Free keywords",
            "type": "array",
            "uniqueItems": true
        },
        "nonpublic_note": {
            "title": "Non public note",
            "type": "string"
        },
        "note": {
            "title": "Note",
            "type": "array"
        },
        "opening_date": {
            "format": "date",
            "title": "Conference opening date",
            "type": "string"
        },
        "place": {
            "pattern": ".+,.+,?.*",
            "title": "Conference place",
            "type": "string"
        },
        "series": {
            "title": "Conference series",
            "type": "array"
        },
        "series_number": {
            "title": "Conference series number",
            "type": "integer"
        },
        "short_description": {
            "type": "object",
                "properties": {
                    "value": {
                        "type": "string"
                    },
                    "source": {
                        "type": "string"
                    }
                },
                "type":"array",
                "title": "Short description"
        },
        "titles": {
            "$ref": "elements/titles.json"
        },
        "urls": {
            "$ref": "elements/urls.json"
        }
    },
    "title": "Conference",
    "type": "object"
}
